#for_window [title="@Terminal"] move scratchpad

# Title bar
new_window pixel 1

# System Power
# Setting binding for System mode
bindsym $mod+End mode "$mode_system"

# Other bindings & warning dialog
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec lock.sh, mode "default"
    bindsym e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'", mode "default" 
    bindsym s exec "i3-nagbar -t warning -m 'You pressed the suspend shortcut. Do you really want to suspend?' -b 'I said SUSPEND' 'systemctl suspend'", mode "default" 
    bindsym r exec "i3-nagbar -t warning -m 'You pressed the reboot shortcut. Do you really want to reboot?' -b 'Yes, dammit' 'systemctl reboot'", mode "default"
    bindsym Shift+s exec "i3-nagbar -t warning -m 'You pressed the shutdown shortcut. Do you really want to shutdown?' -b 'Yes please' 'systemctl shutdown'", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Applying random wallpaper on session start
exec --no-startup-id feh --randomize --bg-center ~/Pictures/ULTRAWIDEMASTERRACE/*

# Compton for opacity
exec compton -f

# Redshift startup
exec nohup redshift &
